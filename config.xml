<?xml version='1.0' encoding='utf-8'?>
<widget id="com.giangnt.cotien" version="0.0.2">
    <name short="CôTiênXanh">Cô Tiên Xanh</name>
    <description>
      Vui học cùng Cô Tiên Xanh
    </description>
    <author email="nguyentrigiang1991@gmail.com" href="https://github.com/nguyentrigiang">
      Nguyen Tri Giang
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0x000000" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="Orientation" value="landscape" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-screen-orientation" spec="~3.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.2.0" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon background="src/app/icon/android/mipmap-hdpi/ic_launcher.png" density="hdpi" foreground="src/app/icon/android/mipmap-hdpi/ic_launcher.png" src="src/app/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon background="src/app/icon/android/mipmap-mdpi/ic_launcher.png" density="mdpi" foreground="src/app/icon/android/mipmap-mdpi/ic_launcher.png" src="src/app/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon background="src/app/icon/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" foreground="src/app/icon/android/mipmap-xhdpi/ic_launcher.png" src="src/app/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon background="src/app/icon/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" foreground="src/app/icon/android/mipmap-xxhdpi/ic_launcher.png" src="src/app/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon background="src/app/icon/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" foreground="src/app/icon/android/mipmap-xxxhdpi/ic_launcher.png" src="src/app/icon/android/mipmap-hdpi/ic_launcher.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.5" />
</widget>
